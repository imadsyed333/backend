// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int    @id @default(autoincrement())
  name        String
  price       Int
  image       String
  description String
}

model Purchase {
  id            Int    @id @default(autoincrement())
  order         Order  @relation(fields: [order_id], references: [id])
  order_id      Int
  product_name  String
  product_price Int
  product_count Int
}

model Order {
  id        Int        @id @default(autoincrement())
  user      User       @relation(fields: [userId], references: [id])
  userId    Int
  cost      Int
  datetime  DateTime
  purchases Purchase[]
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String
  password String
  orders   Order[]
}
